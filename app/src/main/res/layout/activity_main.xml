<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kinan's calculator"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tittle"
        android:layout_marginTop="20sp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tittle"
        android:layout_marginTop="50dp"
        android:background="@drawable/background_textviewresult"
        android:padding="10sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/result"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:layout_height="@dimen/button_size"
        android:background="@drawable/background_keyboard"
        android:layout_below="@id/result"
        android:layout_alignStart="@id/result"
        android:layout_marginTop="40dp"
        android:text="C"
        android:id="@+id/button_clear"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_persen"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:layout_alignTop="@id/button_clear"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_clear"
        android:layout_weight="1"
        android:background="@drawable/background_keyboard"
        android:onClick="input"
        android:text="^"
        android:textSize="30dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_alignTop="@id/button_persen"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_persen"
        android:text="/"
        android:id="@+id/button_pangkat"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_del"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:layout_alignTop="@id/button_pangkat"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_pangkat"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:onClick="input"
        android:text=""
        android:textSize="30dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:textSize="30dp"
        android:layout_height="@dimen/button_size"
        android:background="@drawable/background_keyboard"
        android:layout_below="@id/button_clear"
        android:layout_alignStart="@id/button_clear"
        android:layout_marginTop="10dp"
        android:text="1"
        android:id="@+id/button_1"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:layout_alignTop="@id/button_1"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_1"
        android:layout_weight="1"
        android:background="@drawable/background_keyboard"
        android:onClick="input"
        android:text="2"
        android:textSize="30dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_alignTop="@id/button_2"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_2"
        android:text="3"
        android:id="@+id/button_3"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_multiply"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:layout_alignTop="@id/button_3"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@id/button_3"
        android:background="@drawable/background_keyboard"
        android:onClick="input"
        android:text="x"
        android:textSize="30dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_below="@id/button_1"
        android:layout_alignStart="@id/button_1"
        android:layout_marginTop="10dp"
        android:text="4"
        android:id="@+id/button_4"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_alignTop="@id/button_4"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_4"
        android:text="5"
        android:id="@+id/button_5"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_alignTop="@id/button_5"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_5"
        android:text="6"
        android:id="@+id/button_6"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_alignTop="@id/button_6"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_6"
        android:text="-"
        android:id="@+id/button_minus"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_below="@id/button_4"
        android:layout_alignStart="@id/button_4"
        android:layout_marginTop="10dp"
        android:text="7"
        android:id="@+id/button_7"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_alignTop="@id/button_7"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_7"
        android:text="8"
        android:id="@+id/button_8"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_alignTop="@id/button_8"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_8"
        android:text="9"
        android:id="@+id/button_9"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_alignTop="@id/button_9"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_9"
        android:text="+"
        android:id="@+id/button_plus"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_below="@id/button_7"
        android:layout_alignStart="@id/button_7"
        android:layout_marginTop="10dp"
        android:text="."
        android:id="@+id/button_koma"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_alignTop="@id/button_koma"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_koma"
        android:text="0"
        android:id="@+id/button_0"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_alignTop="@id/button_0"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_0"
        android:text="00"
        android:id="@+id/button_bagi"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="30dp"
        android:background="@drawable/background_keyboard"
        android:layout_alignTop="@id/button_bagi"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button_bagi"
        android:text="="
        android:id="@+id/button_equal"
        android:layout_weight="1"
        android:textStyle="bold"
        android:onClick="input"
        />
</RelativeLayout>
